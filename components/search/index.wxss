/* components/search/index.wxss */

/* 搜索框 */
.search-box {
    height: 65rpx;
    padding: 18rpx;
    background-color: #ff2d4a;
}

.search-input {
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 24rpx;
    color: #999;
    background-color: #fff;
    border-radius: 4px;
}

.search-input icon {
    margin-right: 5px;
}

.center {
    justify-content: center;
}

.left {
    justify-content: flex-start;
}

.right {
    justify-content: flex-end;
}