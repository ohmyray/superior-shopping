/* pages/search/index.wxss */
/* 搜索框 */
page{
  height: 100%;
}

.container {
  height: 100%;
  width: 750rpx;
}
.search-box {
  height: 65rpx;
  padding: 18rpx;
  background-color: #E6E6E6;
  display: flex;
}

.search-input {
  position: relative;
  height: 100%;
  display: flex;
  align-items: center;
  padding-left: 12rpx;
  font-size: 24rpx;
  color: #999;
  background-color: #fff;
  border-radius: 4px;
}

.search-input .icon {
  margin-right: 5px;
}

.search-input {
  width: 100%;
}

.cancel{
  width: 15%;
  padding: 14rpx 20rpx;
  background:#f1f2f3;
  margin-left: 14rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 26rpx;
  color: #060666;
  box-shadow: 0 0 1px 1px #D8D8D8;
}

.suggest {
  max-height: 600rpx;
  overflow: auto;
  position: absolute;
  width: 100%;
  top: 64rpx;
  left: 0;
}

.suggest-item {
  padding: 30rpx 0;
  border-top: 1px solid #eee;
  font-size: 25rpx;
  line-height: 25rpx;
  text-indent: 30rpx;
  color: #666;
  background-color: #fff;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
  word-break: break-all;
}

.past {
  padding: 0 30rpx;
}

.past .history {
  display: flex;
  box-sizing: border-box;
  width: 100%;
  justify-content: space-between;
  padding: 30rpx 0;
  /* background-color: firebrick; */
}

.history-item {
  padding: 10rpx 20rpx;
  font-size: 25rpx;
  background-color: #DEDEDE;
}